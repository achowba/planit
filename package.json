	"scripts": {
		"ng": "ng",
		"build": "ng build --prod",
		"start": "run-s build start:server",
		"start-dev": "run-s build start:server-dev",
		"start:server-dev": "nodemon src/server/index.js",
		"start:server": "node src/server/index.js",
		"watch:client": "ng serve --proxy-config proxy.conf.json --open",
		"watch:server": "nodemon src/server/index.js",
		"watch": "run-p watch:*",
		"sample": "node src/server/data/seed-db.js",
		"test-client": "ng test",
		"test-server": "export NODE_ENV=test || SET \"NODE_ENV=test\" && mocha src/server/tests/server.test.js --timeout 10000",
		"watch-test-server": "nodemon --exec \"npm run test-server\"",
		"lint": "ng lint"
	},
	"private": true,
